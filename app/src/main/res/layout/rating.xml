<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Rating">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/rating_toolbar1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0"/>

    <TextView
        android:id="@+id/rating_textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Detail"
        android:textColor="@color/wine"
        android:textSize="30sp"
        android:fontFamily="@font/anodina"
        app:layout_constraintTop_toTopOf="@id/rating_toolbar1"
        app:layout_constraintBottom_toBottomOf="@id/rating_toolbar1"
        app:layout_constraintLeft_toLeftOf="@id/rating_toolbar1"
        app:layout_constraintRight_toRightOf="@id/rating_toolbar1" />

    <ImageView
        android:id="@+id/rating_imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintVertical_bias="0.118"
        app:srcCompat="@drawable/profile_v" />

    <TextView
        android:id="@+id/rating_textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rudiyanto"
        android:textColor="@color/wine"
        android:textSize="25sp"
        android:textStyle="bold"
        android:fontFamily="@font/anodina"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.43"
        app:layout_constraintVertical_bias="0.128" />

    <TextView
        android:id="@+id/rating_textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Plumber"
        android:textColor="@color/wine"
        android:textSize="15sp"
        android:fontFamily="@font/anodina"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.36"
        app:layout_constraintVertical_bias="0.179" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/rating_toolbar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.289" />

    <TextView
        android:id="@+id/rating_textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description"
        android:textColor="@color/wine"
        android:textSize="30sp"
        android:fontFamily="@font/anodina"
        app:layout_constraintTop_toTopOf="@id/rating_toolbar2"
        app:layout_constraintBottom_toBottomOf="@id/rating_toolbar2"
        app:layout_constraintLeft_toLeftOf="@id/rating_toolbar2"
        app:layout_constraintRight_toRightOf="@id/rating_toolbar2" />

    <TextView
        android:id="@+id/rating_textView5"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="15dp"
        android:layout_marginVertical="15dp"
        android:paddingHorizontal="10dp"
        android:layout_height="wrap_content"
        android:paddingVertical="5dp"
        android:fontFamily="@font/anodina"
        android:text="Installing Water Pump"
        android:textSize="18sp"
        android:textColor="@color/dim_gray"
        android:background="@drawable/border"
        android:minHeight="60dp"
        android:maxHeight="120dp"
        app:layout_constraintTop_toBottomOf="@id/rating_toolbar2"/>

    <TextView
        android:id="@+id/rating_textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Paid"
        android:textColor="@color/wine"
        android:textSize="25sp"
        android:fontFamily="@font/anodina"
        android:layout_marginLeft="15dp"
        android:layout_marginVertical="20dp"
        app:layout_constraintTop_toBottomOf="@id/rating_textView5"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/rating_textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rp.105.000"
        android:textColor="@color/wine"
        android:textSize="25sp"
        android:textStyle="bold"
        android:fontFamily="@font/anodina"
        android:layout_marginRight="15dp"
        app:layout_constraintTop_toTopOf="@id/rating_textView6"
        app:layout_constraintBottom_toBottomOf="@id/rating_textView6"
        app:layout_constraintRight_toRightOf="parent" />

    <View
        android:id="@+id/rating_divider1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/golden_yellow"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="15dp"
        app:layout_constraintTop_toBottomOf="@id/rating_textView6" />

    <TextView
        android:id="@+id/rating_textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Payment"
        android:textColor="@color/wine"
        android:textSize="25sp"
        android:fontFamily="@font/anodina"
        android:layout_marginLeft="15dp"
        android:layout_marginVertical="10dp"
        app:layout_constraintTop_toBottomOf="@id/rating_divider1"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/rating_textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cash"
        android:textColor="@color/wine"
        android:textSize="25sp"
        android:textStyle="bold"
        android:fontFamily="@font/anodina"
        android:layout_marginVertical="10dp"
        android:layout_marginRight="15dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/rating_textView8"
        app:layout_constraintBottom_toBottomOf="@id/rating_textView8" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/rating_toolbar3"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:background="@drawable/gradient"
        android:layout_marginVertical="20dp"
        app:layout_constraintTop_toBottomOf="@id/rating_textView9"/>

    <TextView
        android:id="@+id/rating_textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please rate my service"
        android:textColor="@color/wine"
        android:textSize="25sp"
        android:fontFamily="@font/anodina"
        app:layout_constraintTop_toTopOf="@id/rating_toolbar3"
        app:layout_constraintBottom_toTopOf="@id/rating_ratingBar1"
        app:layout_constraintLeft_toLeftOf="@id/rating_toolbar3"
        app:layout_constraintRight_toRightOf="@id/rating_toolbar3" />

    <RatingBar
        android:id="@+id/rating_ratingBar1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/rating_textView10"
        app:layout_constraintBottom_toBottomOf="@id/rating_toolbar3"
        app:layout_constraintLeft_toLeftOf="@id/rating_toolbar3"
        app:layout_constraintRight_toRightOf="@id/rating_toolbar3" />

    <Button
        android:id="@+id/rating_button1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="25dp"
        android:layout_marginHorizontal="15dp"
        android:background="@drawable/background_radius"
        android:text="Thank You !"
        android:textColor="@color/golden_yellow"
        android:textSize="20sp"
        android:fontFamily="@font/anodina"
        android:textAllCaps="false"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>