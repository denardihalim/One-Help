<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomePage">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/hp_toolbar1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0" />

    <TextView
        android:id="@+id/hp_textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Home"
        android:textColor="@color/wine"
        android:textSize="30sp"
        android:fontFamily="@font/anodina"
        app:layout_constraintTop_toTopOf="@id/hp_toolbar1"
        app:layout_constraintBottom_toBottomOf="@id/hp_toolbar1"
        app:layout_constraintLeft_toLeftOf="@id/hp_toolbar1"
        app:layout_constraintRight_toRightOf="@id/hp_toolbar1" />

    <TextView
        android:id="@+id/hp_textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome !"
        android:textColor="@color/wine"
        android:textSize="30sp"
        android:fontFamily="@font/anodina"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        app:layout_constraintTop_toBottomOf="@id/hp_toolbar1"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageButton
        android:id="@+id/hp_imageButton1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/electricity"
        android:scaleType="fitCenter"
        android:padding="17dp"
        android:adjustViewBounds="true"
        android:background="@drawable/menu_button"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@id/hp_textView2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/hp_imageButton2" />

    <TextView
        android:id="@+id/hp_textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Electricity"
        android:textColor="@color/wine"
        android:textSize="20sp"
        android:fontFamily="@font/anodina"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/hp_imageButton1"
        app:layout_constraintLeft_toLeftOf="@id/hp_imageButton1"
        app:layout_constraintRight_toRightOf="@id/hp_imageButton1" />

    <ImageButton
        android:id="@+id/hp_imageButton2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/plumber"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:padding="15dp"
        android:background="@drawable/menu_button"
        app:layout_constraintTop_toTopOf="@id/hp_imageButton1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/hp_textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Plumber"
        android:textColor="@color/wine"
        android:textSize="20sp"
        android:fontFamily="@font/anodina"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/hp_imageButton2"
        app:layout_constraintLeft_toLeftOf="@id/hp_imageButton2"
        app:layout_constraintRight_toRightOf="@id/hp_imageButton2" />

    <ImageButton
        android:id="@+id/hp_imageButton3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/house_maintenance"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:padding="20dp"
        android:background="@drawable/menu_button"
        app:layout_constraintTop_toTopOf="@id/hp_imageButton2"
        app:layout_constraintLeft_toRightOf="@id/hp_imageButton2"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/hp_textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="House\nMaintenance"
        android:textColor="@color/wine"
        android:textSize="20sp"
        android:gravity="center_horizontal"
        android:textAlignment="center"
        android:fontFamily="@font/anodina"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/hp_imageButton3"
        app:layout_constraintLeft_toLeftOf="@id/hp_imageButton3"
        app:layout_constraintRight_toRightOf="@id/hp_imageButton3" />

    <ImageButton
        android:id="@+id/hp_imageButton4"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/repair"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:padding="22dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/menu_button"
        app:layout_constraintTop_toBottomOf="@id/hp_textView3"
        app:layout_constraintLeft_toLeftOf="@id/hp_textView3"
        app:layout_constraintRight_toRightOf="@id/hp_textView3"/>

    <TextView
        android:id="@+id/hp_textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Repair"
        android:textColor="@color/wine"
        android:textSize="20sp"
        android:fontFamily="@font/anodina"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/hp_imageButton4"
        app:layout_constraintLeft_toLeftOf="@id/hp_imageButton4"
        app:layout_constraintRight_toRightOf="@id/hp_imageButton4" />

    <TextView
        android:id="@+id/hp_textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="More Features Coming Out Soon !"
        android:textColor="@color/wine"
        android:textSize="20sp"
        android:fontFamily="@font/anodina"
        android:background="@drawable/border"
        android:layout_marginBottom="20dp"
        android:paddingHorizontal="25dp"
        android:paddingVertical="5dp"
        app:layout_constraintBottom_toTopOf="@id/hp_linearLayout1"
        app:layout_constraintLeft_toLeftOf="@id/hp_linearLayout1"
        app:layout_constraintRight_toRightOf="@id/hp_linearLayout1" />

    <LinearLayout
        android:id="@+id/hp_linearLayout1"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:weightSum="4"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/hp_imageButton5"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:srcCompat="@drawable/home"
            android:background="@drawable/gradient_reverse"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/hp_imageButton6"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:srcCompat="@drawable/activity"
            android:background="@drawable/gradient"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/hp_imageButton7"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:srcCompat="@drawable/history"
            android:background="@drawable/gradient"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/hp_imageButton8"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:srcCompat="@drawable/profile"
            android:background="@drawable/gradient"
            android:layout_weight="1" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>