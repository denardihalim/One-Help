<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OrderList">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/ol_toolbar1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0" />

    <ImageView
        android:id="@+id/ol_imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/ol_toolbar1"
        app:layout_constraintBottom_toBottomOf="@id/ol_toolbar1"
        app:srcCompat="@drawable/back" />

    <TextView
        android:id="@+id/ol_textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="List"
        android:textColor="@color/wine"
        android:textSize="30sp"
        android:fontFamily="@font/anodina"
        app:layout_constraintTop_toTopOf="@id/ol_toolbar1"
        app:layout_constraintBottom_toBottomOf="@id/ol_toolbar1"
        app:layout_constraintLeft_toLeftOf="@id/ol_toolbar1"
        app:layout_constraintRight_toRightOf="@id/ol_toolbar1" />

    <Button
        android:id="@+id/ol_button1"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@drawable/border"
        android:layout_marginTop="25dp"
        android:layout_marginHorizontal="15dp"
        app:backgroundTint="@null"
        app:layout_constraintTop_toBottomOf="@id/ol_toolbar1" />

    <ImageView
        android:id="@+id/ol_imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/profile_v"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toTopOf="@id/ol_button1"
        app:layout_constraintBottom_toBottomOf="@id/ol_button1"
        app:layout_constraintLeft_toLeftOf="@id/ol_button1"/>

    <TextView
        android:id="@+id/ol_textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ari Rahmadsyah"
        android:textColor="@color/wine"
        android:textSize="25sp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/anodina"
        app:layout_constraintTop_toTopOf="@id/ol_button1"
        app:layout_constraintLeft_toRightOf="@id/ol_imageView2" />

    <Button
        android:id="@+id/ol_button2"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@drawable/border"
        android:layout_marginTop="25dp"
        android:layout_marginHorizontal="15dp"
        app:backgroundTint="@null"
        app:layout_constraintTop_toBottomOf="@id/ol_button1" />

    <ImageView
        android:id="@+id/ol_imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/profile_v"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toTopOf="@id/ol_button2"
        app:layout_constraintBottom_toBottomOf="@id/ol_button2"
        app:layout_constraintLeft_toLeftOf="@id/ol_button2"/>

    <TextView
        android:id="@+id/ol_textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fikri"
        android:textColor="@color/wine"
        android:textSize="25sp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/anodina"
        app:layout_constraintTop_toTopOf="@id/ol_button2"
        app:layout_constraintLeft_toRightOf="@id/ol_imageView2" />

    <Button
        android:id="@+id/ol_button3"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@drawable/border"
        android:layout_marginTop="25dp"
        android:layout_marginHorizontal="15dp"
        app:backgroundTint="@null"
        app:layout_constraintTop_toBottomOf="@id/ol_button2" />

    <ImageView
        android:id="@+id/ol_imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/profile_v"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toTopOf="@id/ol_button3"
        app:layout_constraintBottom_toBottomOf="@id/ol_button3"
        app:layout_constraintLeft_toLeftOf="@id/ol_button3"/>

    <TextView
        android:id="@+id/ol_textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Agus"
        android:textColor="@color/wine"
        android:textSize="25sp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/anodina"
        app:layout_constraintTop_toTopOf="@id/ol_button3"
        app:layout_constraintLeft_toRightOf="@id/ol_imageView3" />

</androidx.constraintlayout.widget.ConstraintLayout>