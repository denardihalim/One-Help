<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".SignUp">

    <ImageButton
        android:id="@+id/su_imageButton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/back"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/su_textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:textColor="@color/wine"
        android:textSize="40sp"
        android:fontFamily="@font/anodina"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="15dp"
        app:layout_constraintTop_toBottomOf="@id/su_imageButton1"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <EditText
        android:id="@+id/su_editTextTextPersonName1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:layout_marginHorizontal="15dp"
        android:hint="Full Name"
        android:textColorHint="@color/golden_yellow"
        android:textColor="@color/golden_yellow"
        android:textSize="20dp"
        android:fontFamily="@font/anodina"
        android:layout_marginTop="25dp"
        android:background="@drawable/background"
        android:paddingHorizontal="15dp"
        android:paddingVertical="10dp"
        app:layout_constraintTop_toBottomOf="@id/su_textView1" />

    <EditText
        android:id="@+id/su_editTextTextEmailAddress1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:layout_marginHorizontal="15dp"
        android:hint="Email"
        android:textColorHint="@color/golden_yellow"
        android:textColor="@color/golden_yellow"
        android:textSize="20dp"
        android:fontFamily="@font/anodina"
        android:layout_marginTop="15dp"
        android:background="@drawable/background"
        android:paddingHorizontal="15dp"
        android:paddingVertical="10dp"
        app:layout_constraintTop_toBottomOf="@id/su_editTextTextPersonName1" />

    <EditText
        android:id="@+id/su_editTextPhone1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:layout_marginHorizontal="15dp"
        android:hint="Phone Number"
        android:textColorHint="@color/golden_yellow"
        android:textColor="@color/golden_yellow"
        android:textSize="20dp"
        android:fontFamily="@font/anodina"
        android:layout_marginTop="15dp"
        android:background="@drawable/background"
        android:paddingHorizontal="15dp"
        android:paddingVertical="10dp"
        app:layout_constraintTop_toBottomOf="@id/su_editTextTextEmailAddress1" />

    <EditText
        android:id="@+id/su_editTextTextPassword1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:layout_marginHorizontal="15dp"
        android:hint="Password"
        android:textColorHint="@color/golden_yellow"
        android:textColor="@color/golden_yellow"
        android:textSize="20dp"
        android:fontFamily="@font/anodina"
        android:layout_marginTop="15dp"
        android:background="@drawable/background"
        android:paddingHorizontal="15dp"
        android:paddingVertical="10dp"
        app:layout_constraintTop_toBottomOf="@id/su_editTextPhone1" />

    <TextView
        android:id="@+id/su_textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="By continuing, you agree to our"
        android:textColor="@color/wine"
        android:textSize="18sp"
        android:fontFamily="@font/anodina"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/su_editTextTextPassword1"
        app:layout_constraintLeft_toLeftOf="@id/su_editTextTextPassword1"
        app:layout_constraintRight_toRightOf="@id/su_editTextTextPassword1" />

    <TextView
        android:id="@+id/su_textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Terms of Service"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:fontFamily="@font/anodina"
        android:linksClickable="true"
        android:layout_marginRight="5dp"
        app:layout_constraintTop_toBottomOf="@id/su_textView2"
        app:layout_constraintLeft_toLeftOf="@id/su_textView2"
        app:layout_constraintRight_toRightOf="@id/su_textView2" />

    <TextView
        android:id="@+id/su_textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Privacy Policy"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:fontFamily="@font/anodina"
        android:linksClickable="true"
        android:layout_marginLeft="4dp"
        app:layout_constraintTop_toBottomOf="@id/su_textView3"
        app:layout_constraintLeft_toLeftOf="@id/su_textView3"
        app:layout_constraintRight_toRightOf="@id/su_textView3"/>

    <Button
        android:id="@+id/su_button1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/background_radius"
        android:layout_marginHorizontal="15dp"
        android:text="Sign Up"
        android:textColor="@color/golden_yellow"
        android:textSize="20sp"
        android:fontFamily="@font/anodina"
        android:textAllCaps="false"
        app:backgroundTint="@null"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/su_textView4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/su_textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Already have an account ?"
        android:textColor="@color/wine"
        android:textSize="18sp"
        android:fontFamily="@font/anodina"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/su_button1"
        app:layout_constraintLeft_toLeftOf="@id/su_button1"
        app:layout_constraintRight_toRightOf="@id/su_button1" />

    <TextView
        android:id="@+id/su_textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:fontFamily="@font/anodina"
        android:linksClickable="true"
        app:layout_constraintTop_toBottomOf="@id/su_textView5"
        app:layout_constraintLeft_toLeftOf="@id/su_textView5"
        app:layout_constraintRight_toRightOf="@id/su_textView5"/>

</androidx.constraintlayout.widget.ConstraintLayout>