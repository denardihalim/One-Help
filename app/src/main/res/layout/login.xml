<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".Login">

    <ImageButton
        android:id="@+id/login_imageButton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/back"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/login_textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello,"
        android:textColor="@color/wine"
        android:textSize="40sp"
        android:fontFamily="@font/anodina"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="15dp"
        app:layout_constraintTop_toBottomOf="@id/login_imageButton1"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/login_textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome !"
        android:textColor="@color/wine"
        android:textSize="30sp"
        android:fontFamily="@font/anodina"
        android:layout_marginLeft="15dp"
        app:layout_constraintTop_toBottomOf="@id/login_textView1"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <EditText
        android:id="@+id/login_editTextTextEmailAddress1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:layout_marginHorizontal="15dp"
        android:hint="Email"
        android:textColorHint="@color/golden_yellow"
        android:textColor="@color/golden_yellow"
        android:textSize="20dp"
        android:fontFamily="@font/anodina"
        android:layout_marginTop="30dp"
        android:background="@drawable/background"
        android:paddingHorizontal="15dp"
        android:paddingVertical="10dp"
        app:layout_constraintTop_toBottomOf="@id/login_textView2" />

    <EditText
        android:id="@+id/login_editTextTextPassword1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:layout_marginHorizontal="15dp"
        android:hint="Password"
        android:textColorHint="@color/golden_yellow"
        android:textColor="@color/golden_yellow"
        android:textSize="20dp"
        android:fontFamily="@font/anodina"
        android:layout_marginTop="15dp"
        android:background="@drawable/background"
        android:paddingHorizontal="15dp"
        android:paddingVertical="10dp"
        app:layout_constraintTop_toBottomOf="@id/login_editTextTextEmailAddress1" />

    <TextView
        android:id="@+id/login_textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot your password ?"
        android:textColor="@color/wine"
        android:textSize="18sp"
        android:fontFamily="@font/anodina"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        app:layout_constraintTop_toBottomOf="@id/login_editTextTextPassword1"
        app:layout_constraintLeft_toLeftOf="@id/login_editTextTextPassword1" />

    <Button
        android:id="@+id/login_button1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/background_radius"
        android:layout_marginHorizontal="15dp"
        android:text="Login"
        android:textColor="@color/golden_yellow"
        android:textSize="20sp"
        android:fontFamily="@font/anodina"
        android:textAllCaps="false"
        app:backgroundTint="@null"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/login_textView3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/login_textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Or"
        android:textColor="@color/wine"
        android:textSize="25sp"
        android:fontFamily="@font/anodina"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/login_button1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <Button
        android:id="@+id/login_button2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/facebook_button"
        android:layout_marginHorizontal="15dp"
        android:text="Continue with Facebook"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:fontFamily="@font/anodina"
        android:textAllCaps="false"
        app:backgroundTint="@null"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/login_textView4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/login_button3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/google_button"
        android:layout_marginHorizontal="15dp"
        android:text="Continue with Google"
        android:textColor="@color/wine"
        android:textSize="20sp"
        android:fontFamily="@font/anodina"
        android:textAllCaps="false"
        app:backgroundTint="@null"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/login_button2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>